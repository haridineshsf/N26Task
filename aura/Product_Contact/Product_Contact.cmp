<!--
    Component Type : Lightning Component
    Description : This component can be used in case Layout to display the contact related products.
    Date : 09-03-2019,
    Author:Haridinesh.K
-->
<aura:component controller="Productcontroller" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes" access="global">
   
    <aura:attribute name="recordId" type="String" />
    <aura:attribute type="PricebookEntry[]" name="LstProducts"/>
    <aura:attribute name="mycolumns" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.fetchProd}"/>
    <lightning:datatable data="{! v.LstProducts }"
                         columns="{! v.mycolumns }"
                         keyField="id"
                         hideCheckboxColumn="true" /> 
</aura:component>